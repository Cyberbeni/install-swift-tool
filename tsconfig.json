{
	"extends": "@tsconfig/node24/tsconfig.json",
	"compilerOptions": {
		// Build:
		"incremental": false,
		"rootDir": "./src",
		"declaration": false,
		"rewriteRelativeImportExtensions": true,

		// Lint:
		"strict": true,
		"noImplicitAny": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["src"]
}
